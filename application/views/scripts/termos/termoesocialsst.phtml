function Autorizar() {
    var radios = document.querySelectorAll('input[type="radio"]:checked');
    var value = radios.length > 0 ? radios[0].value: null;

    var nome = $('#daclarante_nome').val();
    var cpf = $('#daclarante_cpf').val();
    
    if (value > 0 && nome != '' && cpf != '') {
        $("#permitir").prop('disabled', false);        
    } else {
        $("#permitir").prop('disabled', true);
    }
}

function autorizar() {
    $("#permitir").html('Aguarde...');
    $("#permitir").prop('disabled', true);

    var radios = document.querySelectorAll('input[type="radio"]:checked');
    var value = radios.length > 0 ? radios[0].value: null;
    var nome = $('#daclarante_nome').val();
    var cpf = $('#daclarante_cpf').val();

    $.post('/ajax/json/servico/aceitar-termos-esocial', {id:value, nome:nome, cpf:cpf}, function (resposta) {
        
        if (resposta == 0) {   
            $("#permitir").prop('disabled', false);
            $("#permitir").html('Aceitar');       
        } else {
            $("#modal-termos-esocial").modal("hide");
            document.getElementById('modal-termos-esocial').classList.add('hide');
            window.location.reload(true);
        }
        
    });
}

</script>
